{
  "model": "qwen3-coder-flash",
  "messages": [
    {
      "role": "system",
      "content": "You are a helpful AI assistant with access to tools. When the user asks you to create a todo list, use the todowrite tool."
    },
    {
      "role": "user",
      "content": "Create a todo list with 3 tasks: 1) Write tests 2) Fix bugs 3) Deploy to production"
    }
  ],
  "tools": [
    {
      "type": "function",
      "function": {
        "name": "todowrite",
        "description": "Creates or updates a task list",
        "parameters": {
          "type": "object",
          "properties": {
            "todos": {
              "type": "array",
              "description": "Array of todo items",
              "items": {
                "type": "object",
                "properties": {
                  "content": {
                    "type": "string",
                    "description": "The task description"
                  },
                  "status": {
                    "type": "string",
                    "enum": ["pending", "in_progress", "completed"],
                    "description": "Task status"
                  },
                  "activeForm": {
                    "type": "string",
                    "description": "Present continuous form of the task"
                  }
                },
                "required": ["content", "status", "activeForm"]
              }
            }
          },
          "required": ["todos"]
        }
      }
    }
  ],
  "temperature": 0.7,
  "max_tokens": 2000
}
